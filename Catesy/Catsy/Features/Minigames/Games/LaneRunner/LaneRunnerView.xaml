<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catsy.Features.Minigames.Games.LaneRunnerView"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,*,Auto" Padding="12">

        <Grid Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,8">
            <Button Text="Back"
                    Command="{Binding BackToMinigameSelect}"
                    Padding="10,6"/>

            <Label Grid.Column="1"
                   Text="Lane Runner"
                   TextColor="White"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <Grid Row="1">

            <GraphicsView x:Name="GameView" />

            <Label x:Name="ScoreLabel"
                   Text="Score: 0"
                   TextColor="White"
                   FontSize="18"
                   Margin="10"
                   HorizontalOptions="Start"
                   VerticalOptions="Start"
                   ZIndex="10"/>

            
            <Label x:Name="StateLabel"
                   Text=""
                   TextColor="White"
                   FontSize="22"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   ZIndex="20"/>
        </Grid>

        <Grid Row="2" ColumnDefinitions="*,*,*" Margin="0,10,0,0">
            <Button Text="⟵"
                    Clicked="OnLeftClicked"
                    FontSize="22" />
            <Button Text="Restart"
                    Grid.Column="1"
                    Clicked="OnRestartClicked"
                    FontSize="18" />
            <Button Text="⟶"
                    Grid.Column="2"
                    Clicked="OnRightClicked"
                    FontSize="22" />
        </Grid>

    </Grid>
</ContentView>
