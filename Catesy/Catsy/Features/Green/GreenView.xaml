<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Catsy.GreenView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid BackgroundColor="Green" RowDefinitions="Auto,*" Padding="16">

        <!-- Controls -->
        <HorizontalStackLayout Grid.Row="0" Spacing="12">
            <Button Text="Start" Clicked="Start_Clicked" />
            <Button Text="Stop" Clicked="Stop_Clicked" />
        </HorizontalStackLayout>

        <!-- Playfield -->
        <Grid Grid.Row="1" x:Name="Playfield" BackgroundColor="Transparent">
            <Image x:Name="Ball"
                   Source="btnGreen.png"
                   WidthRequest="64"
                   HeightRequest="64"
                   HorizontalOptions="Start"
                   VerticalOptions="Center" />
        </Grid>

    </Grid>
</ContentView>
