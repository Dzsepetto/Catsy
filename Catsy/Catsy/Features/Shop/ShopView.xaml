<?xml version="1.0" encoding="utf-8"?>
<ContentView
    x:Class="Catsy.ShopView"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Catsy.Features.Models">

    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:ShopItem">
                <Frame Margin="10"
                       Padding="10"
                       CornerRadius="12"
                       BorderColor="Gray">

                    <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                        <Image Source="{Binding Icon}"
                               WidthRequest="64"
                               HeightRequest="64"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>

                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="{Binding Name}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Price, StringFormat='Price: {0}'}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>