<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catsy.Features.Minigames.Games.Snake.SnakeView"
             BackgroundColor="Green">

    <Grid
      RowDefinitions="Auto,*,Auto"
      Padding="12">

        <Grid Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,8">
            <Button Text="Back"
                    Command="{Binding BackToMinigameSelect}"
                    Padding="10,6"/>

            <Label x:Name="ScoreText"
                   Grid.Column="1"
                   TextColor="White"
                   FontSize="18"
                   HorizontalOptions="End"/>
        </Grid>

        <Grid Row="1">
            <Border x:Name="GridBorder"
                    Stroke="Red"
                    StrokeThickness="1.5"
                    WidthRequest="400"
                    HeightRequest="400"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                <Grid x:Name="GameGrid" />

            </Border>

            <Border x:Name="Overlay"
                    Grid.Row="1"
                    Background="Red"
                    >
                <Label x:Name="OverlayText" Text="Press Any Key TO Start" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

            </Border>
        </Grid>
        
        

        <Grid Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="⬆"
            Grid.Row="0"
            Grid.Column="1"
            Clicked="UpClicked"/>

                <Button Text="⬅"
            Grid.Row="1"
            Grid.Column="0"
            Clicked="LeftClicked"/>

                <Button Text="➡"
            Grid.Row="1"
            Grid.Column="2"
            Clicked="RightClicked"/>

            <Button Text="⬇"
            Grid.Row="2"
            Grid.Column="1"
            Clicked="DownClicked"/>
        </Grid>
        

    </Grid>
</ContentView>
